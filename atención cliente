class habitación: 
    def _init_(self, numero, tipo, precio, capacidad, servicios=None) :
        self.numero = numero
        self.tipo = tipo
        self.precio = precio
        self.capacidad = capacidad
        self.disponible = True
        self.servicios = servicios if servicios else []
    def mostrar_informacion(self):
        estado = "dispoible" if self.disponible else "ocupada" 
