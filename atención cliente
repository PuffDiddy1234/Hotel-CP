        def ocupar(self):
            if self.disponible:
                self.disponible = False
                print (f"La habitación {self.numero} ahora está ocupada.")
            else:
                print (f"La habitación {self.numero} ya está ocupada.") 
        def liberar(self): 
                if not self.dispoible:
                    self.disponible = True
                    print (f"La habitación {self.numero} ahora está disponible.")
                else: 
                    print (f"La habitación {self.numero} ")
 
